<Window x:Class="OutlookMailViewerMVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Outlook Mail Viewer (MVVM)"
        Height="560" Width="920"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding FromDate, Mode=TwoWay}" Width="160" Margin="0,0,16,0"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding ToDate, Mode=TwoWay}" Width="160" Margin="0,0,16,0"/>
            <Button Content="Load Emails" Padding="12,6" Command="{Binding LoadEmailsCommand}" />
            <TextBlock Text="{Binding Status}" Margin="16,0,0,0" VerticalAlignment="Center" Opacity="0.8"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Grid.Row="2" Grid.ColumnSpan="3"
                  ItemsSource="{Binding Emails}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ReceivedTime, StringFormat=dd/MM/yyyy HH:mm}" Header="Received" Width="180"/>
                <DataGridTextColumn Binding="{Binding Subject}" Header="Subject" Width="*"/>
                <DataGridTextColumn Binding="{Binding SenderName}" Header="Sender" Width="220"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StatusBar Grid.Row="3" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <StatusBarItem Content="{Binding Status}" />
        </StatusBar>
    </Grid>
</Window>
